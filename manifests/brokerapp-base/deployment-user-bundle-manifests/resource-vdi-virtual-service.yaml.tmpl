apiVersion: networking.istio.io/v1alpha3
kind: VirtualService
metadata:
  name: {{.ServiceName}}
spec:
  hosts:
    - "*"
  gateways:
    - pod-broker-system/pod-broker-gateway
  http:
    ###
    # rule for signalling
    ###
    - match:
        - uri:
            prefix: /{{.App}}/signalling/
          headers:
            cookie:
              regex: ".*broker_{{.App}}={{.CookieValue}}.*"
      rewrite:
        uri: /
      route:
        - destination:
            host: {{.FullName}}-{{.ServiceName}}
            port:
              number: 8080
    ###
    # rule for webrtc
    ###
    - match:
        - uri:
            prefix: /{{.App}}/
          headers:
            cookie:
              regex: ".*broker_{{.App}}={{.CookieValue}}.*"
      rewrite:
        uri: /
      route:
        - destination:
            host: {{.FullName}}-{{.ServiceName}}
            port:
              number: 80
    - match:
        - uri:
            prefix: /
      route:
        - destination:
            host: pod-broker
            port:
              number: 80
