{{- $enableAppProxy := false }}
{{- if .AppParams.enableAppProxy }}
  {{- if eq .AppParams.enableAppProxy "true" }}
    {{- $enableAppProxy = true }}
  {{- end}}
{{- end}}

{{- if $enableAppProxy }}
###
# Add proxy http port to service
###
- op: add
  path: /spec/ports/-
  value:
    port: 8022
    name: http-app-proxy
    targetPort: 8022
###
# Add proxy web port to service
###
- op: add
  path: /spec/ports/-
  value:
    port: 8085
    name: http-proxy-web
    targetPort: 8085
{{- else}}
# Cannot have empty patch, so this is effectively a no-op.
- op: test
  path: /kind
  value: Service
{{- end}}