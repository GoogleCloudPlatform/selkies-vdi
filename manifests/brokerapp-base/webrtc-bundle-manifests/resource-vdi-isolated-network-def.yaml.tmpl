# NOTE: This feature requires that Multus and Weave Net are installed.

{{- $enableIsolatedNetwork := false }}
{{- if .AppParams.enableIsolatedNetwork }}
  {{- if eq .AppParams.enableIsolatedNetwork "true" }}
    {{- $enableIsolatedNetwork = true }}
  {{- end}}
{{- end}}

{{- $isolatedNetworkCIDR := default "10.32.0.0/24" .AppParams.isolatedNetworkCIDR }}

{{- if $enableIsolatedNetwork}}
apiVersion: "k8s.cni.cncf.io/v1"
kind: NetworkAttachmentDefinition
metadata:
  name: {{.ServiceName}}-weave
spec:
  config: |
    {
        "cniVersion": "0.3.0",
        "name": "weave",
        "plugins": [
            {
                "name": "weave",
                "type": "weave-net",
                "hairpinMode": true,
                "ipam": {
                  "type": "weave-ipam",
                  "subnet": "{{ $isolatedNetworkCIDR }}",
                  "routes": [
                    { "dst": "0.0.0.0/0" }
                  ]
                }
            },
            {
                "type": "portmap",
                "capabilities": {"portMappings": true},
                "snat": true
            }
        ]
    }
{{- end}}