{{- $enableSharedStorage := false }}
{{- if .AppParams.enableSharedStorage }}
  {{- if eq .AppParams.enableSharedStorage "true" }}
    {{- $enableSharedStorage = true }}
  {{- end}}
{{- end}}

{{- $subPath := default "data" .AppParams.sharedStorageSubPath }}

{{- if $enableSharedStorage }}
###
# Add volume claim template
###
- op: add
  path: "/spec/volumeClaimTemplates/-"
  value:
    metadata:
      name: shared
      annotations:
        gke.accel.vdi/user: "{{.User}}"
    spec:
      accessModes: [ "{{ default "ReadWriteMany" .AppParams.sharedVolumeMode }}" ]
      storageClassName: {{ default "" .AppParams.sharedStorageClass | quote }}
      volumeName: {{ default "" .AppParams.sharedVolumeName }}
      resources:
        requests:
          storage: {{ default "1Gi" .AppParams.sharedStorageSize }}

###
# Add init container for mount path
###
- op: add
  path: "/spec/template/spec/initContainers/-"
  value:
    name: shared-init
    image: busybox:latest
    imagePullPolicy: IfNotPresent
    command: ["/bin/sh"]
    args:
      - -xc
      - |
        mkdir -p /mnt/shared/${SUBPATH}
        /bin/chown 1000:1000 /mnt/shared/${SUBPATH}
    env:
      - name: SUBPATH
        value: "{{ $subPath }}"
    volumeMounts:
      - name: shared
        mountPath: /mnt/shared

###
# Add volumeMount to desktop container
###
- op: add
  path: "/spec/template/spec/containers/0/volumeMounts/-"
  value:
    name: shared
    mountPath: {{ default "/mnt/shared" .AppParams.sharedStorageMountPath }}
    subPath: {{ $subPath }}
{{- else}}
# Cannot have empty patch, so this is effectively a no-op.
- op: test
  path: /spec/template/spec/containers/0/name
  value: desktop
{{- end}}